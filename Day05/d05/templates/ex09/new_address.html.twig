<h2>Add Address</h2>
{% if app.request.get('success') %}
    <p style="color: green;">{{ app.request.get('success') }}</p>
{% elseif app.request.get('error') %}
    <p style="color: red;">{{ app.request.get('error') }}</p>
{% endif %}
<form method="POST" action="{{ path('ex09_insert_address') }}">
    <label>Address:</label>
    <textarea name="address" required></textarea><br>

    <label>Person:</label>
    <select name="person_id">
        {% for person in persons %}
            <option value="{{ person.id }}">{{ person.name }}</option>
        {% endfor %}
    </select><br>

    <button type="submit">Add Address</button>
</form>
