<h1>Users List</h1>

{% if message %}
    <p>{{ message }}</p>
{% endif %}

<table border="1" cellpadding="8">
    <tr>
        <th>ID</th><th>Username</th><th>Name</th><th>Email</th>
        <th>Enabled</th><th>Birthdate</th><th>Address</th><th>Actions</th>
    </tr>
    {% for user in users %}
        <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.username }}</td>
            <td>{{ user.name }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.enable ? 'Yes' : 'No' }}</td>
            <td>{{ user.birthdate }}</td>
            <td>{{ user.address }}</td>
            <td><a href="{{ path('ex06_edit', {id: user.id}) }}">Edit</a></td>
            <td><a href="{{ path('ex06_delete', { id: user.id }) }}"
                    onclick="return confirm('Are you sure you want to delete this user?');">Delete</a></td>
        </tr>
    {% endfor %}
</table>
